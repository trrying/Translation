<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="baseTextViewStyle">

    </style>

    <!-- 有道翻译结果音标 start -->
    <style name="youdaoResult_phometic_root">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="youdaoResult_phometic_icon">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@mipmap/ic_sound</item>
    </style>

    <style name="baseTextViewStyle.youdaoResult_phometic_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/intro_text_color</item>
        <item name="android:textSize">15dp</item>
        <item name="text_style_bold">true</item>
    </style>
    <!-- 有道翻译结果音标 end -->

    <!-- RecycleView style start -->
    <style name="baseRecycleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="baseRecycleView.marginTop">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
    </style>
    <!-- 有道翻译结果音标 end -->



</resources>
